{
  "version": "independent",
  "changelogPreset": {
    "name": "conventionalcommits"
  },
  "packages": [
    "domain.agnostic/*",
    "domain.auth",
    "domain.cms",
    "domain.commerce",
    "client.web/*",
    "client.heartbeat"
  ],
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "message": "chore(release): publish [skip ci]"
    },
    "publish": {
      "allowBranch": "main",
      "conventionalCommits": true
    }
  }
}
