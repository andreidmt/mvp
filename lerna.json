{
  "useWorkspaces": true,
  "version": "independent",
  "changelogPreset": {
    "name": "conventionalcommits"
  },
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "message": "chore(release): publish %s"
    },
    "publish": {
      "allowBranch": "main",
      "conventionalCommits": true
    }
  }
}
