{
  "name": "@r3wy/r3wy",
  "version": "1.0.0",
  "description": "R3wy",
  "private": true,
  "homepage": "https://github.com/r3wy/r3wy",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/r3wy/r3wy.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "bugs": {
    "url": "https://github.com/r3wy/r3wy/issues"
  },
  "contributors": [
    "Andrei Dumitrescu <andrei.dumitrescu@pm.me>"
  ],
  "workspaces": [
    "@r3wy.*"
  ],
  "scripts": {
    "----UTIL": "",
    "prepare": "git config --local core.hooksPath .githooks",
    "setup": "npm ci --also=dev",
    "update": "ncu --deep --interactive",
    "format": "npm run format --workspaces --if-present",
    "----LINT": "",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "----TEST": "",
    "test.unit": "npm run test --workspace=@r3wy/react",
    "test.e2e": "npm run test --workspace=@r3wy/e2e",
    "coverage": "npm run coverage --workspace=@r3wy/react",
    "----DEVELOP": "",
    "start": "npm run start --workspace=@r3wy/react",
    "----BUNDLE": "",
    "release": "lerna publish --no-private --yes",
    "build": "npm run build --workspace=@r3wy/react"
  },
  "lint-staged": {
    "*.md": [
      "markdownlint --ignore CHANGELOG.md"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.6",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.14",
    "@swc/jest": "^0.2.23",
    "@types/debug": "^4.1.7",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "dotenv": "^16.0.3",
    "eslint": "^8.27.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-junit": "^14.0.1",
    "lerna": "^6.0.1",
    "lint-staged": "^13.0.3",
    "markdownlint-cli": "^0.32.2",
    "npm-check-updates": "^16.3.18",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5",
    "swc-loader": "^0.2.3",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  }
}
