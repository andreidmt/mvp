{
  "name": "@r3wy/mono",
  "version": "1.0.0",
  "description": "R3wy",
  "private": true,
  "homepage": "https://github.com/r3wy/r3wy",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/r3wy/r3wy.git"
  },
  "bugs": {
    "url": "https://github.com/r3wy/r3wy/issues"
  },
  "contributors": [
    "Andrei Dumitrescu <andrei.dumitrescu@pm.me>"
  ],
  "workspaces": [
    "@r3wy.*"
  ],
  "scripts": {
    "----UTIL": "",
    "prepare": "git config --local core.hooksPath .githooks",
    "setup": "npm ci --include=dev",
    "update": "ncu --deep --interactive",
    "format": "npm run format --workspaces --if-present",
    "----LINT": "",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "----TEST": "",
    "test.unit": "npm run test --workspace=@r3wy/web_main",
    "test.e2e": "npm run test --workspace=@r3wy/e2e",
    "coverage": "npm run coverage --workspace=@r3wy/web_main",
    "----DEVELOP": "",
    "start": "npm run start --workspace=@r3wy/web_main",
    "----BUNDLE": "",
    "release": "lerna publish --no-private --yes",
    "build": "npm run build --workspace=@r3wy/web_main"
  },
  "lint-staged": {
    "!(*CHANGELOG).md": [
      "markdownlint"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.7",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.26",
    "@swc/jest": "^0.2.24",
    "@types/debug": "^4.1.7",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "dotenv": "^16.0.3",
    "eslint": "^8.31.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-junit": "^15.0.0",
    "lerna": "^6.4.1",
    "lint-staged": "^13.1.0",
    "markdownlint-cli": "^0.33.0",
    "npm-check-updates": "^16.6.2",
    "prettier": "^2.8.2",
    "semantic-release": "^20.0.2",
    "swc-loader": "^0.2.3",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  }
}
