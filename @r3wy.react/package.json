{
  "name": "@r3wy/react",
  "version": "1.0.0",
  "description": "R3wy's React frontend",
  "private": true,
  "scripts": {
    "----UTIL": "",
    "format": "eslint --fix .",
    "----LINT": "",
    "lint.js": "eslint --quiet .",
    "lint.md": "markdownlint '*.md' 'src/**/*.md' --ignore CHANGELOG.md",
    "lint": "npm run lint.js && npm run lint.md",
    "typecheck": "tsc --pretty --noEmit",
    "----TEST": "",
    "test": "jest",
    "test.watch": "jest --watch",
    "precoverage": "rm -rf coverage",
    "coverage": "c8 npm test && c8 report --reporter=text-lcov | coveralls",
    "----DEVELOP": "",
    "start": "webpack serve --mode development",
    "----BUNDLE": "",
    "prebuild": "rm -rf dist",
    "build": "webpack --mode production"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --quiet"
    ]
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.0.11",
    "@chakra-ui/react": "^2.3.7",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@swc/helpers": "^0.4.12",
    "debug": "^4.3.4",
    "fast-deep-equal": "^3.1.3",
    "framer-motion": "^7.6.5",
    "i18n-iso-countries": "^7.5.0",
    "i18next": "^22.0.4",
    "qs": "^6.11.0",
    "rambda": "^7.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-hook-form": "^7.39.1",
    "react-i18next": "^12.0.0",
    "react-router-dom": "^6.4.3",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@emotion/jest": "^11.10.5",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.8",
    "@r3wy/eslint-config": "^1.2.2",
    "@r3wy/prettier-config": "^1.2.2",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@trivago/prettier-plugin-sort-imports": "^3.4.0",
    "@types/dotenv-webpack": "^7.0.3",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@types/react-helmet": "^6.1.5",
    "@types/webpack-bundle-analyzer": "^4.6.0",
    "browserslist": "^4.21.4",
    "c8": "^7.12.0",
    "copy-webpack-plugin": "^11.0.0",
    "coveralls": "^3.1.1",
    "css-loader": "^6.7.1",
    "dotenv-webpack": "^8.0.1",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.1",
    "react-refresh": "^0.14.0",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  }
}
