{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "allowJs": true,
    "checkJs": true,

    "strict": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    // To provide backwards compatibility, Node.js allows you to import
    // most CommonJS packages with a default import. This flag tells TypeScript
    // that it's okay to use import on CommonJS modules.
    "allowSyntheticDefaultImports": true,
    "incremental": true
  }
}
